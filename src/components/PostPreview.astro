---
import type { CollectionEntry } from 'astro:content';

export interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
---

<article class="group">
  <a
    href={`/writing/posts/${post.slug}`}
    rel="prefetch"
    class="block hover:no-underline focus:no-underline"
  >
    <header>
      <p
        class="mb-1 font-mono text-sm text-gray-400 group-hover:text-green-500 md:mb-2"
      >
        {
          new Date(post.data.publishDate).toLocaleDateString('en-US', {
            month: 'long',
            day: 'numeric',
            year: 'numeric',
          })
        }
      </p>

      <h1 class="h1 mb-2 decoration-green-500 group-hover:underline">
        {post.data.title}
      </h1>
    </header>

    {
      post.data.tags ? (
        <div class="blog-tags my-2">
          {post.data.tags.map((tag) => (
            <span class="blog-tag">{tag}</span>
          ))}
        </div>
      ) : null
    }
  </a>
</article>
